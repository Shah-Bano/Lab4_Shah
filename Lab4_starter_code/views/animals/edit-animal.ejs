<%- include('partials/_title', { title: "Edit Animals" }) %>

<%- include('partials/_nav') %>
<div class="container mt-4">
    <h1>Edit Animal</h1>
  
    <form action="/updateAnimal/<%= animal._id %>" method="post">
      <fieldset>
        <legend>Edit Animal Record</legend>
  
        <div class="mb-3">
          <label for="homeZoo" class="form-label">Home Zoo</label>
          <input type="text" class="form-control" id="homeZoo" name="homeZoo" value="<%= animal.homeZoo %>">
        </div>
  
        <div class="mb-3">
          <label for="scientificName" class="form-label">Scientific Name</label>
          <input type="text" class="form-control" id="scientificName" name="scientificName" value="<%= animal.scientificName %>">
        </div>
  
        <div class="mb-3">
          <label for="commonName" class="form-label">Common Name</label>
          <input type="text" class="form-control" id="commonName" name="commonName" value="<%= animal.commonName %>">
        </div>
  
        <div class="mb-3">
          <label for="givenName" class="form-label">Given Name</label>
          <input type="text" class="form-control" id="givenName" name="givenName" value="<%= animal.givenName %>">
        </div>
  
        <div class="mb-3">
          <label>Gender</label><br>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="male" value="male" <%= animal.gender === 'male' ? 'checked' : '' %>>
            <label class="form-check-label" for="male">Male</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="female" value="female" <%= animal.gender === 'female' ? 'checked' : '' %>>
            <label class="form-check-label" for="female">Female</label>
          </div>
        </div>
  
        <div class="mb-3">
          <label for="dateOfBirth" class="form-label">Date of Birth</label>
          <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" value="<%= animal.dateOfBirth.toISOString().substring(0, 10) %>">
        </div>
  
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" id="age" name="age" value="<%= animal.age %>">
        </div>
  
        <div class="mb-3">
          <label>Is Transportable</label><br>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="transportable" id="available" value="true" <%= animal.isTransportable ? 'checked' : '' %>>
            <label class="form-check-label" for="available">Available</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="transportable" id="unavailable" value="false" <%= animal.isTransportable ? '' : 'checked' %>>
            <label class="form-check-label" for="unavailable">Unavailable</label>
          </div>
        </div>
  
        <button type="submit" class="btn btn-primary">Update Animal Record</button>
      </fieldset>
    </form>
  
    <form action="/deleteAnimal/<%= animal._id %>" method="post">
      <button type="submit" class="btn btn-danger">Delete Animal</button>
    </form>
  </div>
  